thread.create(file, func, ...) -> userdata (thread object)
thread.destroy(td)
thread.start(td, [stack_size = 0]) -> boolean
thread.join(td) -> boolean
thread.kill(td)
thread.mutexCreate() -> userdata (mutex object)
thread.mutexDestroy(mtx)
thread.mutexLock(mtx)
thread.mutexUnlock(mtx)
thread.lockCreate() -> userdata (lock object)
